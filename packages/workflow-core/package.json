{
    "name": "or3-workflow-core",
    "version": "0.1.2",
    "description": "Headless workflow engine with LLM agent orchestration",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "sideEffects": false,
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "vite build",
        "dev": "vite build --watch",
        "typecheck": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest",
        "prepublishOnly": "bun run build"
    },
    "keywords": [
        "workflow",
        "ai",
        "agent",
        "llm",
        "orchestration",
        "openrouter"
    ],
    "author": "Brendon",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/or3/or3-workflows"
    },
    "dependencies": {
        "@openrouter/sdk": "^0.3.11",
        "zod": "^4.0.0"
    },
    "devDependencies": {
        "typescript": "^5.0.0",
        "vite": "^7.2.0",
        "vite-plugin-dts": "^4.0.0",
        "vitest": "^1.0.0"
    }
}
