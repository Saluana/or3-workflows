{
    "name": "or3-workflows-monorepo",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "workspaces": [
        "packages/*",
        "demo-v2",
        "demo-headless"
    ],
    "scripts": {
        "dev": "vite",
        "build": "bun run --filter './packages/*' build",
        "build:core": "cd packages/workflow-core && bun run build",
        "build:vue": "cd packages/workflow-vue && bun run build",
        "preview": "vite preview",
        "test": "vitest run",
        "typecheck": "tsc -b"
    },
    "devDependencies": {
        "@types/node": "^24.10.1",
        "typescript": "^5.0.0",
        "vite": "^7.2.0",
        "vitest": "^1.0.0"
    },
    "dependencies": {
        "@openrouter/sdk": "^0.3.11"
    }
}
